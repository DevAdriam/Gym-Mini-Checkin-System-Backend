#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "Running NestJS build check..."

# Build the application to check for compilation errors
pnpm run build

if [ $? -eq 0 ]; then
  echo "✅ Build successful."
  exit 0
else
  echo "❌ Build failed! Please fix compilation errors before pushing."
  exit 1
fi
